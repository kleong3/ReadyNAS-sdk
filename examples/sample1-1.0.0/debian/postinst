#!/bin/sh
# postinst script for sample1
# this file contains commands to complete any configuration of the package once it is unpacked from the 
# debian archive and then start/restart a service once a new package is installed or upgraded
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
    chown -R admin:admin /apps/sample1
    if systemctl restart apache2.service; then
      # success
      event_push app readynasd '<add-s resource-type="LocalApp" resource-id="LocalApp"><LocalApp appname="sample1" success="1"/></add-s>' 0 0
    else
      # error
      event_push app readynasd '<add-s resource-type="LocalApp" resource-id="LocalApp"><LocalApp appname="sample1" success="0"/></add-s>' 0 0
    fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

###
# Enable serrvice
###

rn_nml -S sample1 

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

#Note:
    #having issues with the postinst file? the journal command for the root will only notify you of an error with the script,
    #not the line specifics
    #change the very first line to #!/bin/bash which creates a bash script
    #in a separate terminal input:
        #$bash ~/path/to/scriptname
    #also input $chmod u+x scriptname to change the permissions of the file to make it executable if there are such issues
    #after running the script, the bash script will allow you to pinpoint where in your code there is in an error
    
    
    
    
    
    
    
    
    
    
    
    
    
    
